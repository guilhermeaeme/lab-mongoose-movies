<h2>Celebrities</h2>

<p>
  <a href="/celebrities/new">
    Add new
  </a>
</p>

<hr />

{{#each celebrities}}

  <div class="celebrity">
    <a href="/celebrities/{{ this._id }}">{{ this.name }}</a>

    <a class="inline" href="/celebrities/{{ this._id }}/edit">
      <button>edit</button>
    </a>

    <form class="inline" action="/celebrities/{{ this._id }}/delete" method="POST">
      <button type="submit">delete</button>
    </form>
  </div>

{{/each}}
